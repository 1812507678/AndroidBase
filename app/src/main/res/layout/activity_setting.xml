<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/app_background_color"
    tools:context=".activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/ll_me_password"
        style="@style/option_item_rl"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp">
        <TextView
            style="@style/option_item_text"
            android:text="找回密码"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <RelativeLayout
        android:id="@+id/ll_me_suggest"
        style="@style/option_item_rl"
        android:paddingLeft="5dp">
        <TextView
            style="@style/option_item_text"
            android:text="意见反馈"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <RelativeLayout
        android:id="@+id/ll_me_update"
        style="@style/option_item_rl"
        android:paddingLeft="5dp">
        <TextView
            style="@style/option_item_text"
            android:text="版本更新"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />
    <RelativeLayout
        android:id="@+id/ll_me_aboutus"
        style="@style/option_item_rl"
        android:paddingLeft="5dp"
        android:visibility="gone">
        <TextView
            style="@style/option_item_text"
            android:text="关于我们"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:id="@+id/ll_me_exit"
        style="@style/option_item_rl"
        android:layout_marginTop="30dp">
        <TextView
            style="@style/option_item_text"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@android:color/holo_red_light"/>
    </LinearLayout>

</LinearLayout>
