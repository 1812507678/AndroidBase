<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y128"
    android:background="#FFFFFF"
    android:id="@+id/rl_base_head">

    <ImageView
        android:id="@+id/iv_base_leftimage"
        android:layout_width="@dimen/x104"
        android:layout_height="@dimen/y104"
        android:padding="@dimen/y20"
        android:layout_marginLeft="@dimen/x26"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_icon_press_oval"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_base_centerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/x52"
        android:textColor="#3b3b3b"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/tv_base_lefttext"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y104"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:text="left"
        android:gravity="center"
        android:layout_marginLeft="@dimen/x36"
        android:textSize="@dimen/x48"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_icon_press_oval"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_base_rightText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y104"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:text="right"
        android:gravity="center"
        android:textSize="@dimen/x48"
        android:textColor="#000"
        android:layout_marginRight="@dimen/x36"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_icon_press_oval"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_base_rightimage"
        android:layout_width="@dimen/x104"
        android:layout_height="@dimen/y104"
        android:padding="@dimen/y20"
        android:layout_marginRight="@dimen/x26"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_icon_press_oval"
        android:visibility="gone"/>

    <!--中间为一条分割线-->
    <View
        android:background="#AAA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>