<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haijun.shop.activity.AddAddressActivity"
    android:orientation="vertical"
    android:background="@color/app_background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:paddingLeft="@dimen/x36"
        android:background="#FFF">
        <TextView
            android:id="@+id/tv_login_text1"
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x40"
            android:textColor="#333333"
            android:text="收货人"/>
        <EditText
            android:id="@+id/et_address_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x120"
            android:hint="请输入收货人姓名"
            android:singleLine="true"
            android:textColorHint="#ccccd2"
            android:textSize="@dimen/x40"
            android:background="@null"
            android:layout_toRightOf="@id/tv_login_text1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:paddingLeft="@dimen/x36"
        android:background="#FFF">
        <TextView
            android:id="@+id/tv_login_text2"
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x40"
            android:textColor="#333333"
            android:text="联系电话"/>
        <EditText
            android:id="@+id/et_address_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x120"
            android:hint="请输入收货人电话"
            android:singleLine="true"
            android:textColorHint="#ccccd2"
            android:textSize="@dimen/x40"
            android:background="@null"
            android:layout_toRightOf="@id/tv_login_text2"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:background="#FFF">
        <TextView
            android:id="@+id/tv_login_text3"
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x40"
            android:textColor="#333333"
            android:text="所在地区"/>
        <TextView
            android:id="@+id/tv_address_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x120"
            android:text="请选择"
            android:textColor="#999"
            android:textSize="@dimen/x40"
            android:layout_toRightOf="@id/tv_login_text3"/>
        <ImageView
            android:id="@+id/iv_account_indocator3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_to_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_address_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x500"
        android:hint="请补充详细收货地址，如街道、门牌号、楼层及房间等"
        android:gravity="top"
        android:paddingTop="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:paddingLeft="@dimen/x36"
        android:textColorHint="#ccccd2"
        android:textSize="13sp"
        android:background="#FFF"/>

</LinearLayout>
