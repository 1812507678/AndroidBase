<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haijun.shop.fragment.MeFragment"
    android:background="@color/app_background_color">

    <LinearLayout
        android:id="@+id/ll_user_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/rl_user_center"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:clickable="true">

            <com.haijun.shop.view.CircleImageView
                android:id="@+id/cv_me_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:contentDescription="@null"
                android:src="@drawable/widget_dface"
                />
            <TextView
                android:id="@+id/tv_me_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_me_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x20"
                android:text="点击登陆"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_me_personinf"
        style="@style/option_item_rl"
        android:layout_marginTop="20dp" >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/logo"/>
        <TextView
            style="@style/option_item_text"
            android:text="个人信息"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />
    <LinearLayout
        android:id="@+id/ll_me_applyhis"
        style="@style/option_item_rl">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/logo"/>
        <TextView
            style="@style/option_item_text"
            android:text="申请记录"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:id="@+id/ll_me_invite"
        style="@style/option_item_rl">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/logo"/>
        <TextView
            style="@style/option_item_text"
            android:text="邀请好友"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</LinearLayout>
